{% extends 'base.html.twig' %}

{% block title %}Convite de Usuário{% endblock %}

{% block body %}

<div class="invite-wrapper">
    <div class="invite-container">
        <h1>Convite de Usuário</h1>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.fullName, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fullName) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.roles, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.roles) }}
        </div>

        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-primary">Enviar Convite</button>
        </div>

        

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
