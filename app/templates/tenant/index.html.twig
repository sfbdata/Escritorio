{% extends 'base.html.twig' %}

{% block title %}Tenants{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">
        {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
            Todos os Tenants
        {% else %}
            Meu Tenant
        {% endif %}
    </h2>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Criado em</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for tenant in tenants %}
            <tr>
                <td>{{ tenant.id }}</td>
                <td>{{ tenant.name }}</td>
                <td>{{ tenant.createdAt|date('d/m/Y H:i') }}</td>
                <td>{{ tenant.isActive ? 'Ativo' : 'Inativo' }}</td>
                <td>
                    {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
                        <a href="{{ path('app_tenant_edit', {'id': tenant.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                        <form method="post" action="{{ path('app_tenant_delete', {'id': tenant.id}) }}" style="display:inline-block" onsubmit="return confirm('Tem certeza que deseja excluir este Tenant?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tenant.id) }}">
                            <button class="btn btn-sm btn-danger">Excluir</button>
                        </form>
                    {% elseif 'ROLE_ADMIN' in app.user.roles and app.user.tenant.id == tenant.id %}
                        <a href="{{ path('app_tenant_edit', {'id': tenant.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                    {% else %}
                        <span class="text-muted">Sem permissões</span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
