{% extends 'base.html.twig' %}

{% block title %}Novo Tenant{% endblock %}

{% block body %}
<div class="tenant-container tenant-form">
    <h2 class="page-title">Criar Tenant</h2>

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.name, 'Nome do Tenant', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.adminEmail, 'Email do Administrador', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.adminEmail, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.adminEmail) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.adminPassword, 'Senha do Administrador', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.adminPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.adminPassword) }}
    </div>

    <div class="d-grid mt-4">
        <button type="submit" class="btn btn-dark btn-lg">Criar Tenant</button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
