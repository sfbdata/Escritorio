{% extends 'base.html.twig' %}

{% block title %}Escritório{% endblock %}

{% block body %}
<div class="tenant-container">
    <h2 class="page-title">Escritório</h2>

    <table class="tenant-table table table-bordered">
        <tbody>
            <tr><th>ID</th><td>{{ tenant.id }}</td></tr>
            <tr><th>Nome</th><td>{{ tenant.name }}</td></tr>
            <tr><th>Criado em</th><td>{{ tenant.createdAt ? tenant.createdAt|date('d/m/Y H:i:s') : '' }}</td></tr>
            <tr><th>Status</th><td>{{ tenant.isActive ? 'Ativo' : 'Inativo' }}</td></tr>
        </tbody>
    </table>

    <div class="mt-3 text-center">
        {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
            <a href="{{ path('app_tenant_index') }}" class="btn btn-secondary">Voltar</a>
        {% endif %}
        {% if 'ROLE_SUPER_ADMIN' in app.user.roles or ( 'ROLE_ADMIN' in app.user.roles and app.user.tenant.id == tenant.id ) %}
            <a href="{{ path('app_tenant_edit', {'id': tenant.id}) }}" class="btn btn-primary">Editar</a>
        {% endif %}
        {% if 'ROLE_SUPER_ADMIN' in app.user.roles %}
            {{ include('tenant/_delete_form.html.twig') }}
        {% endif %}
    </div>
</div>
{% endblock %}
